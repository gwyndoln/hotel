mixin big-button(options)

  if !options
    - options = {}

  -
    var buttonClassName = 'big-button'
    buttonClassName += options.class ? ` ${options.class}` : ''

  button(class = buttonClassName, type = options.type, name = options.name, value = options.value)
    h3.big-button__text= options.text
    .big-button__arrow
      +arrow