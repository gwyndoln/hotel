    p.room-book-card__add-service-charge-calc= 'Сбор за дополнительные услуги'
    +info-icon({class: 'room-book-card__add-service-charge-info'})
    p.room-book-card__add-service-charge-sum= '300₽'
  .room-book-card__total-price
    h2.room-book-card__total= 'Итого'
    .room-book-card__dashed-line
    h2.room-book-card__total-num= '38 081₽'
  +big-button({class: 'room-book-card-book-btn', text: 'ЗАБРОНИРОВАТЬ'})